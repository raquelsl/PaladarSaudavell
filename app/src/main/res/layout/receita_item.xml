<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    tools:showIn="@layout/activity_main"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
     <TextView
         android:id="@+id/txt_icon"
         android:layout_width="48dp"
         android:layout_height="48dp"
         android:textSize="24dp"
         android:textColor="@android:color/white"
         android:background="@drawable/circle"
         tools:text="F"
         android:gravity="center"
         />
        <TextView
            android:id="@+id/txt_receita"
            android:textColor="@color/darkergray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            tools:text="Panqueca Fit"
            android:layout_toEndOf="@id/txt_icon"
            android:layout_alignTop="@id/txt_icon"
            android:layout_marginStart="16dp"            />


        <TextView
            android:id="@+id/txt_resumo"
            android:textColor="@color/darkergray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            tools:text="Panqueca rápida, proteica e muito fácil de preparar."
            android:layout_below="@id/txt_receita"
            android:layout_alignStart="@id/txt_receita"
            android:layout_marginStart="16dp"            />

        <TextView
            android:id="@+id/txt_resumo_preparo"
            android:textColor="@color/darkergray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            tools:text="resumo modo de preparo."
            android:layout_below="@id/txt_resumo"
            android:layout_alignStart="@id/txt_receita"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="24dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>