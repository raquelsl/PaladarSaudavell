<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".model.detalhesReceita">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">


    <EditText
        android:id="@+id/nome_receita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_baseline_create_24"
        android:hint="DÃª um nome para sua receita"
        android:inputType="textPersonName"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/igredientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:drawableLeft="@drawable/ic_baseline_list_alt_24"
        android:hint="Liste os igredientes"
        android:inputType="textMultiLine"
        android:paddingTop="10dp" />

    <Spinner
        android:id="@+id/porcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modopreparo"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:entries="@array/quantidade_porcao"
        android:spinnerMode="dropdown"

        />


    <EditText
        android:id="@+id/modopreparo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/igredientes"
        android:drawableLeft="@drawable/ic_baseline_library_books_24"
        android:hint="Modo de preparo"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="2"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/imgReceita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom|center_horizontal|fill_horizontal|end"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_add_photo_alternate_24" />

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/holo_red_light"
        android:text="Cancelar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonSalvar"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        android:text="Salvar Receita"
        android:textColor="@android:color/white" />

</RelativeLayout>


</android.support.v7.widget.CardView>